<%- include('../partial/header') %>
<div class="basic">
    <div class="card">
        <h5 class="card-header">포스트 수정</h5>
        <div class="card-body">
            <form action="/post/edit/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group mb-3"><textarea class="form-control" id="desc" name="description"><%= post.description %></textarea></div>
                <div class="form-group mb-3"><input class="form-control" type="file" name="image"></div>
                <button type="submit" class="btn btn-secondary w-100"><i class="bi bi-pencil"></i></button>
            </form>
        </div>
    </div>
</div>
<%- include('../partial/footer') %>